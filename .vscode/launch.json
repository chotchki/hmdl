{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hearthstone-server'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hearthstone-server",
                    "--package=hearthstone-server"
                ],
                "filter": {
                    "name": "hearthstone-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'hearthstone-server'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=hearthstone-server",
                    "--package=hearthstone-server"
                ],
                "filter": {
                    "name": "hearthstone-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "command": "npm start",
            "name": "npm backend",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/hearthstone-frontend"
        }
    ],
    "compounds": [
        {
            "name": "Server+Client",
            "configurations": [
                "npm backend",
                "Debug executable 'hearthstone-server'"
            ]
        }
    ]
}