{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug hmdl",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hmdl",
                    "--package=hmdl"
                ],
                "filter": {
                    "name": "hmdl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug hmdl unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=hmdl",
                    "--package=hmdl"
                ],
                "filter": {
                    "name": "hmdl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "command": "npm start",
            "name": "npm backend",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/hmdl-frontend"
        }
    ],
    "compounds": [
        {
            "name": "Server+Client",
            "configurations": [
                "npm backend",
                "Debug hmdl"
            ]
        }
    ]
}